{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": false,
    "composite": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "dist"
  ]
}